# Template .env per progetti ottimizzati
#
# Sostituzioni:
# - {{DB_NAME}}: Nome database
# - {{DB_USER}}: Utente database
# - {{DB_PASSWORD}}: Password database (generare con: openssl rand -base64 24)
# - {{DB_ROOT_PASSWORD}}: Password root (generare con: openssl rand -base64 24)
# - {{DOMAIN}}: Dominio completo
# - {{NEXTAUTH_SECRET}}: Secret (generare con: openssl rand -base64 32)

# Database Configuration
DB_HOST=127.0.0.1
DB_PORT=3307
DB_NAME={{DB_NAME}}
DB_USER={{DB_USER}}
DB_PASSWORD={{DB_PASSWORD}}
DB_ROOT_PASSWORD={{DB_ROOT_PASSWORD}}

# Application
NODE_ENV=production
NEXT_PUBLIC_SITE_URL=https://{{DOMAIN}}
NEXTAUTH_URL=https://{{DOMAIN}}
NEXTAUTH_SECRET={{NEXTAUTH_SECRET}}

# Optional Services (configurare se necessario)
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=
OPENAI_API_KEY=
RESEND_API_KEY=
