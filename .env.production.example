# Production Environment Configuration
# Copy this file to .env.production and fill in the values

# ===========================================
# DOMAIN CONFIGURATION
# ===========================================
DOMAIN=panel.yourdomain.com
ACME_EMAIL=admin@yourdomain.com

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
DATABASE_NAME=vps_panel
DATABASE_USER=vpsadmin
DATABASE_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE

# Full database URL (used by backend)
DATABASE_URL=postgresql://${DATABASE_USER}:${DATABASE_PASSWORD}@postgres:5432/${DATABASE_NAME}

# ===========================================
# JWT CONFIGURATION
# ===========================================
# Generate with: openssl rand -base64 64
JWT_SECRET=CHANGE_ME_STRONG_SECRET_HERE
JWT_EXPIRES_IN=7d

# ===========================================
# ENCRYPTION
# ===========================================
# Generate with: openssl rand -hex 32
ENCRYPTION_KEY=CHANGE_ME_32_BYTE_HEX_KEY_HERE

# ===========================================
# API KEYS
# ===========================================
# Hostinger API Key (for email management)
HOSTINGER_API_KEY=

# Cloudflare API Token (optional, for DNS management)
CLOUDFLARE_API_TOKEN=

# ===========================================
# FRONTEND CONFIGURATION
# ===========================================
NEXT_PUBLIC_API_URL=https://${DOMAIN}
NEXT_PUBLIC_WS_URL=wss://${DOMAIN}

# ===========================================
# TRAEFIK CONFIGURATION
# ===========================================
TRAEFIK_LOG_LEVEL=INFO

# Traefik Dashboard Basic Auth
# Generate with: echo $(htpasswd -nb admin your_password) | sed -e s/\\$/\\$\\$/g
# Or use: echo $(docker run --rm httpd:alpine htpasswd -nbB admin your_password) | sed -e s/\\$/\\$\\$/g
TRAEFIK_DASHBOARD_AUTH=admin:$$apr1$$CHANGE_ME

# ===========================================
# LOGGING
# ===========================================
LOG_LEVEL=info

# ===========================================
# NODE ENVIRONMENT
# ===========================================
NODE_ENV=production

# ===========================================
# OPTIONAL: SMTP CONFIGURATION
# ===========================================
# These can also be configured via System Settings UI
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=
SMTP_FROM_NAME=VPS Panel

# ===========================================
# OPTIONAL: BACKUP CONFIGURATION
# ===========================================
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *

# Project Backup/Import Configuration
UPLOADS_DIR=/var/www/uploads
BACKUP_EXPIRY_HOURS=24

# Google Drive Integration (optional)
# Create a service account in Google Cloud Console and paste the JSON credentials here
# GOOGLE_DRIVE_CREDENTIALS={"type":"service_account","project_id":"...","private_key":"...","client_email":"..."}

# ===========================================
# OPTIONAL: MONITORING
# ===========================================
ENABLE_METRICS=false
METRICS_PORT=9090
