# Server Configuration
NODE_ENV=development
PORT=3001
HOST=0.0.0.0
LOG_LEVEL=info

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Database
DATABASE_URL=postgresql://panel_user:your_password@postgres:5432/vps_panel

# Redis
REDIS_URL=redis://:your_redis_password@redis:6379

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Docker
DOCKER_SOCKET=/var/run/docker.sock
PROJECTS_ROOT=/var/www/projects

# Traefik
TRAEFIK_NETWORK=traefik-public
PREVIEW_DOMAIN=preview.agenzia.com

# Hostinger API
HOSTINGER_API_KEY=your-hostinger-api-key
HOSTINGER_API_URL=https://api.hostinger.com/v1

# Cloudflare (for wildcard SSL)
CLOUDFLARE_EMAIL=your-email@example.com
CLOUDFLARE_API_KEY=your-cloudflare-api-key

# Email (optional SMTP for notifications)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=notifications@agenzia.com
SMTP_PASSWORD=your-smtp-password
SMTP_FROM=VPS Panel <notifications@agenzia.com>

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=60000

# Encryption key (separate from JWT for defense in depth)
# Generate with: openssl rand -hex 32
ENCRYPTION_KEY=your-64-char-hex-encryption-key-generate-with-openssl-rand-hex-32

# Monitoring
METRICS_INTERVAL=30000
CLEANUP_INTERVAL=86400000
